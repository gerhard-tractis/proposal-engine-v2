  "typography": {
    "fontFamily": {
      "display": ["Inter Variable", "Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"],
      "body": ["Inter Variable", "Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "sans-serif"],
      "mono": ["JetBrains Mono", "Consolas", "Monaco", "Courier New", "monospace"]
    },
    
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    },
    
    "fontSize": {
      "display": {
        "size": "clamp(2.5rem, 5vw, 4rem)",
        "lineHeight": "1.1",
        "letterSpacing": "-0.02em",
        "fontWeight": 700
      },
      "h1": {
        "size": "clamp(2rem, 4vw, 3rem)",
        "lineHeight": "1.2",
        "letterSpacing": "-0.015em",
        "fontWeight": 700
      },
      "h2": {
        "size": "clamp(1.5rem, 3vw, 2.25rem)",
        "lineHeight": "1.25",
        "letterSpacing": "-0.01em",
        "fontWeight": 600
      },
      "h3": {
        "size": "1.5rem",
        "lineHeight": "1.3",
        "letterSpacing": "-0.005em",
        "fontWeight": 600
      },
      "h4": {
        "size": "1.25rem",
        "lineHeight": "1.4",
        "letterSpacing": "normal",
        "fontWeight": 600
      },
      "bodyLg": {
        "size": "1.125rem",
        "lineHeight": "1.6",
        "letterSpacing": "normal",
        "fontWeight": 400
      },
      "body": {
        "size": "1rem",
        "lineHeight": "1.6",
        "letterSpacing": "normal",
        "fontWeight": 400
      },
      "bodySm": {
        "size": "0.875rem",
        "lineHeight": "1.5",
        "letterSpacing": "0.01em",
        "fontWeight": 400
      },
      "caption": {
        "size": "0.75rem",
        "lineHeight": "1.4",
        "letterSpacing": "0.02em",
        "fontWeight": 500
      }
    }
  },
  
  "spacing": {
    "0": "0px",
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "7": "28px",
    "8": "32px",
    "9": "36px",
